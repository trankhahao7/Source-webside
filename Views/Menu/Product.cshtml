@model IEnumerable<PBL3_MicayOnline.Models.DTOs.ProductDto>

@{
    ViewData["Title"] ="Mỳ cay Hot Hot - " + ViewData["CategoryName"];
    Layout = null;

    var products = Model.ToList();
    int itemsPerRow = 3; // Hiển thị 3 sản phẩm mỗi dòng
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="menu">
    <h1>@ViewData["CategoryName"]</h1>

    @for (int i = 0; i < products.Count; i += itemsPerRow)
    {
        <div class="menu-grid">
            @for (int j = i; j < i + itemsPerRow && j < products.Count; j++)
            {
                <a href="#" class="dish-card">
                    <img src="@Url.Content(products[j].ImageUrl)" alt="@products[j].Name" class="dish-image">
                    <div class="dish-name">@products[j].Name</div>
                </a>
            }
        </div>
    }
</body>
</html>
